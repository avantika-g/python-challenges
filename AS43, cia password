text = input("Input the text: ")

maxl = text[0]
minl = text[0]

max = text.count(text[0])
min = text.count(text[0])

for i in text:
    if i is not " ":
        if text.count(i) > max:
            maxl = i
            max = text.count(i)
        if text.count(i) < min:
            minl = i
            min = text.count(i)

print("The letter that occured most was",maxl)
print("It occured", max, "times")
print("The letter that occured least was",minl)
print("It occured", min, "times")
